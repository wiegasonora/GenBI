<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bankindonesia.genbi.Login">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/text_title_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            style="@style/TextTitle"/>
        <TextView
            android:layout_marginTop="50dp"
            android:layout_below="@id/text_title_login"
            android:id="@+id/text_email_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            style="@style/TextDef"/>
        <EditText
            android:layout_below="@id/text_email_login"
            android:id="@+id/edit_email_login"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edit_text"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_below="@id/edit_email_login"
            android:id="@+id/text_pw_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            style="@style/TextDef"/>
        <EditText
            android:layout_below="@id/text_pw_login"
            android:id="@+id/edit_pw_login"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edit_text"/>
        <Button
            android:layout_below="@id/edit_pw_login"
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Login"
            style="@style/TextButton"
            android:background="@drawable/rounded_button"/>
    </RelativeLayout>
    <!-- Side navigation drawer UI -->
    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>

</android.support.v4.widget.DrawerLayout>
